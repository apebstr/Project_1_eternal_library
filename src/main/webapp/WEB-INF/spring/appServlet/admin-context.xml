<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- adminDaoImp Bean 선언 -->
<bean id="adminDao" class="admin.dao.AdminDaoImp">
	<property name="sqlSession" ref="sqlSession" />
</bean>

<bean id="borrowDao" class="admin.borrow.dao.BorrowDaoImp">
	<property name="sqlSession" ref="sqlSession" />
</bean>

<!-- adminServiceImp Bean 선언 -->
<bean id="adminService" class="admin.service.AdminServiceImp">
	<property name="adminDao" ref="adminDao" />
</bean>

<bean id="borrowService" class="admin.borrow.service.BorrowServiceImp">
	<property name="borrowDao" ref="borrowDao" />
</bean>


<!-- adminController Bean 선언 -->
<bean class="admin.controller.AdminController" >
	<property name="adminService" ref="adminService" />
	<property name="borrowService" ref="borrowService" />

</bean>
</beans>
